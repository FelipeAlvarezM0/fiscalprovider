{
  "name": "fiscal-nd-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend fiscal auditable para Federal + North Dakota (Grand Forks) con Fastify, Prisma y workers.",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker/index.js",
    "lint": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:http": "vitest run tests/http.integration.spec.ts",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "infra:up": "docker compose up -d",
    "infra:down": "docker compose down"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.1000.0",
    "@aws-sdk/s3-request-presigner": "^3.1000.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@prisma/client": "^6.19.2",
    "bullmq": "^5.70.1",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "ioredis": "^5.10.0",
    "pino": "^10.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "prisma": "^6.19.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
